{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,                 // ativa todas as verificações de tipo rigorosas
    "skipLibCheck": true,           // ignora checagem de tipos de bibliotecas externas
    "jsx": "react-native",          // JSX compatível com React Native
    "moduleResolution": "node",   // mais compatível com React Native para evitar erros de tipos
    "noEmit": true,                 // não gera arquivos JS, apenas verifica tipos
    "resolveJsonModule": true,      // permite importar JSON como módulo
    "esModuleInterop": true,        // compatibilidade com módulos CommonJS
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
